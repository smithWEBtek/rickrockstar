<% content_for :body_content_title do %>
  <%= @tagging.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Tag</h1>
    <p>
      <%=raw @tagging.tag %>
    </p>
  </section>
  <section>
    <h1>Event</h1>
    <p>
      <%=raw @tagging.event %>
    </p>
  </section>
  <section>
    <h1>Band</h1>
    <p>
      <%=raw @tagging.band %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="taggings">
      <% @taggings.each do |tagging| %>
        <li>
          <%= link_to tagging.title, refinery.taggings_tagging_path(tagging) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
