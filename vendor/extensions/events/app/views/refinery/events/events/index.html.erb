<div class="EventIndex">

<% content_for :body do %>
  <ul id="events">
    <% @events.each do |event| %>
      <li>
        <%= link_to event.title, refinery.events_event_path(event) %>
        <p>Tags: <% event.tag_list.map(&:name).map {|t| link_to t, tag_path(t) }.join(', ') %></p>
      </li>
    <% end %>
  </ul>
<% end %>
</div>
<%= render '/refinery/content_page' %>
