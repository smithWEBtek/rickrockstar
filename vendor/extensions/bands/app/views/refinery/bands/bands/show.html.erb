<% content_for :body_content_title do %>
  <%= @band.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @band.name %>
    </p>
  </section>
  <section>
    <h1>Style</h1>
    <p>
      <%=raw @band.style %>
    </p>
  </section>
  <section>
    <h1>Base Fee</h1>
    <p>
      <%=raw @band.base_fee %>
    </p>
  </section>
  <section>
    <h1>Band Image</h1>
    <p>
      <%= image_fu @band.band_image, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="bands">
      <% @bands.each do |band| %>
        <li>
          <%= link_to band.title, refinery.bands_band_path(band) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
