<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(band) -%>">
  <span class='title'>
    <%= band.name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.bands_band_path(band), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_bands_admin_band_path(band), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.bands_admin_band_path(band), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: band.name)}}  ) %>
  </span>
</li>
