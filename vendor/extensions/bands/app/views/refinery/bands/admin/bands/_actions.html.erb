<ul>
  <% if ::Refinery::Bands::Admin::BandsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.bands_admin_bands_path %>
    </li>
  <% end %>
  <li>
    <%= action_label :add, refinery.new_bands_admin_band_path, t('.create_new') %>
  </li>
<% if !searching? && ::Refinery::Bands::Admin::BandsController.sortable? && ::Refinery::Bands::Band.many? %>
  <li>
    <%= action_label :reorder,
                     refinery.bands_admin_bands_path,
                     t('.reorder', what:  "Bands"), id: 'reorder_action'%>
    <%= action_label :reorder_done,
                     refinery.bands_admin_bands_path,
                      t('.reorder_done', what: "Bands"), id: 'reorder_action_done', class: 'hidden'%>
  </li>
<% end %>
</ul>
